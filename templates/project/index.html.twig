
{% extends 'base.html.twig' %}
{% block title %}Project index{% endblock %}

{% block body %}
   <div class="pcoded-content">
                        <div class="pcoded-inner-content">

                            <div class="main-body">
                                <div class="page-wrapper">

                                    


                                    <div class="page-body">

                                        
                                        <div class="card">
                                            <div class="card-header">
                                                <h3>Project List</h3>
                                              
                                            </div>
                                            <div class="card-block">
                                                <div class="dt-responsive table-responsive">
                                                    <table id="table-style-hover"
                                                        class="table table-striped table-hover table-bordered nowrap">
                                                        <thead>
                                                            <tr>
                                                                <th>Id</th>
                                                                <th>Label</th>
                                                                <th>Creation_date</th>
                                                                <th>Manager</th>
                                                                <th>Status</th>
                                                                <th>actions</th>
                                                               
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% for project in projects %}
                                                                <tr>
                                                                   <td>{{ project.id }}</td>
                                                                   <td>{{ project.label }}</td>
                                                                   <td>{{ project.creationDate ? project.creationDate|date('Y-m-d') : '' }}</td>
                                                                   <td>{{ project.Manager.getUsername }}</td>
                                                                   <td>{{ project.status }}</td>
                
                                                                    <td>
                                                                        <button class="btn btn-info btn-round" > <a href="{{ path('app_project_show', {'id': project.id}) }}">show</a></button >

                                                                        <button class="btn btn-success btn-round" > <a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</button >
                                                                    </td>
                                                                </tr>
                                                            {% else %}
                                                                <tr>
                                                                    <td colspan="12">no records found</td>
                                                                </tr>
                                                            {% endfor %}
                                                            </tbody>
                                                        <tfoot>
                                                            <tr>
                                                                <th>Id</th>
                                                                <th>Label</th>
                                                                <th>Creation_date</th>
                                                                <th>Manager</th>
                                                                <th>Status</th>
                                                                <th>actions</th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                 <button class="btn btn-primary btn-square"> <a href="{{ path('app_project_new') }}">Create new</a></button >
                                </div>
                            </div>
                            <div id="styleSelector">
                            </div>
                        </div>
                    </div>
    
{% endblock %}
