
{% extends 'base.html.twig' %}
{% block title %}User index{% endblock %}

{% block body %}
   <div class="pcoded-content">
                        <div class="pcoded-inner-content">

                            <div class="main-body">
                                <div class="page-wrapper">

                                    


                                    <div class="page-body">

                                        
                                        <div class="card">
                                            <div class="card-header">
                                                <h3>User List </h3>
                                                <span>This page show the user list for the role admin you can add delete update user</span>
                                            </div>
                                            <div class="card-block">
                                                <div class="dt-responsive table-responsive">
                                                    <table id="table-style-hover"
                                                        class="table table-striped table-hover table-bordered nowrap">
                                                        <thead>
                                                            <tr>
                                                                <th>Id</th>
                                                                <th>Email</th>
                                                                <th>First_name</th>
                                                                <th>Last_name</th>
                                                                <th>Job_title</th>
                                                                <th>Phone_number</th>
                                                                <th>Created_at</th>
                                                                <th>Username</th>
                                                                <th>actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% for user in users %}
                                                                <tr>
                                                                    <td>{{ user.id }}</td>
                                                                    <td>{{ user.email }}</td>
                                                                    
                                                                    <td>{{ user.firstName }}</td>
                                                                    <td>{{ user.lastName }}</td>
                                                                    <td>{{ user.jobTitle }}</td>
                                                                    <td>{{ user.phoneNumber }}</td>
                                                                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '' }}</td>
                                                                    <td>{{ user.username }}</td>
                                                                    <td>
                                                                        <button class="btn btn-info btn-round" > <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a></button >
                                                                       
                                                                        {{ include('user/_delete_form.html.twig') }}
                                                                        
                                                                        
                                                                        <button class="btn btn-success btn-round" > <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></button >
                                                                        
                                                                        
                                                                       
                                                                    </td>
                                                                </tr>
                                                            {% else %}
                                                                <tr>
                                                                    <td colspan="12">no records found</td>
                                                                </tr>
                                                            {% endfor %}
                                                            </tbody>
                                                        <tfoot>
                                                            <tr>
                                                                <th>Id</th>
                                                                <th>Email</th>
                                                                <th>First_name</th>
                                                                <th>Last_name</th>
                                                                <th>Job_title</th>
                                                                <th>Phone_number</th>
                                                                <th>Created_at</th>
                                                                <th>Username</th>
                                                                <th>actions</th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                 <button class="btn btn-primary btn-square"> <a href="{{ path('app_user_new') }}">Create new</a></button >
                                </div>
                            </div>
                            <div id="styleSelector">
                            </div>
                        </div>
                    </div>
    
{% endblock %}
