
{% extends 'base.html.twig' %}
{% block title %}Project index{% endblock %}

{% block body %}
   <div class="pcoded-content">
                        <div class="pcoded-inner-content">

                            <div class="main-body">
                                <div class="page-wrapper">

                                    


                                    <div class="page-body">

                                        
                                        <div class="card">
                                            <div class="card-header">
                                                <h5>Task tracking List</h5>
                                                
                                            </div>
                                            <div class="card-block">
                                                <div class="dt-responsive table-responsive">
                                                    <table id="table-style-hover"
                                                        class="table table-striped table-hover table-bordered nowrap">
                                                        <thead>
                                                            <tr>
                                                            <th>Id</th>
                                                            <th>Label</th>
                                                            <th>Manager</th>
                                                            <th>Affected to</th>
                                                            <th>Projcet</th>
                                                            <th>Timer</th>
                                                            
                                                            
                                                           </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% for schedule in schedules %}
                                                                <tr>
                                                                   <td>{{ schedule.id }}</td>
                
                                                                     <td>{{ schedule.task.getLabel }}</td>
                                                                     <td>{{ schedule.task.project.manager.username}}</td>
                                                                     <td>{{ schedule.task.Employee.getUsername}}</td>
                                                                     <td>{{ schedule.task.project.getLabel }}</td>
                                                                     <td>{{ schedule.timestamp }}</td>
                
                
                                                                    </td>
                                                                </tr>
                                                            {% else %}
                                                                <tr>
                                                                    <td colspan="12">no records found</td>
                                                                </tr>
                                                            {% endfor %}
                                                            </tbody>
                                                        <tfoot>
                                                            <tr>
                                                              <th>Id</th>
                                                            <th>Label</th>
                                                            <th>Manager</th>
                                                            <th>Affected to</th>
                                                            <th>Projcet</th>
                                                            <th>Timer</th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                
                            </div>
                            <div id="styleSelector">
                            </div>
                        </div>
                    </div>
    
{% endblock %}
