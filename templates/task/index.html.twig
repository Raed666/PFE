
{% extends 'base.html.twig' %}
{% block title %}Project index{% endblock %}

{% block body %}
   <div class="pcoded-content">
                        <div class="pcoded-inner-content">

                            <div class="main-body">
                                <div class="page-wrapper">

                                    


                                    <div class="page-body">

                                        
                                        <div class="card">
                                            <div class="card-header">
                                                <h3>List Of Task</h3>
                                                
                                            </div>
                                            <div class="card-block">
                                                <div class="dt-responsive table-responsive">
                                                    <table id="table-style-hover"
                                                        class="table table-striped table-hover table-bordered nowrap">
                                                        <thead>
                                                            <tr>
                                                            <th>Id</th>
                                                            <th>Label</th>
              						                         <th>Projcet</th>
                                                            <th>Manager</th>
                                                            <th>Affected to</th>
                                                            <th>State</th>
                                                            <th>Description</th>
                                                            <th>actions</th>
                                                           </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% for task in tasks %}
                                                                <tr>
                                                                   <td>{{ task.id }}</td>
                <td>{{ task.label }}</td>
                <td>{{ task.project.getLabel }}</td>
                <td>{{ task.project.manager.username}}</td>
                <td>{{ task.Employee.getUsername}}</td>
                <td>{{ task.state }}</td>
                <td>{{ task.description }}</td>
                
                                                                    <td>
                                                                        <button class="btn btn-info btn-round" > <a href="{{ path('app_task_show', {'id': task.id}) }}">start task</a></button >

                                                                        <button class="btn btn-success btn-round" > <a href="{{ path('app_task_detail', {'id': task.id}) }}">edit</button >
                                                                    </td>
                                                                </tr>
                                                            {% else %}
                                                                <tr>
                                                                    <td colspan="12">no records found</td>
                                                                </tr>
                                                            {% endfor %}
                                                            </tbody>
                                                        <tfoot>
                                                            <tr>
                                                          <th>Id</th>
                                                            <th>Label</th>
              						                         <th>Projcet</th>
                                                            <th>Manager</th>
                                                            <th>Affected to</th>
                                                            <th>State</th>
                                                            <th>Description</th>
                                                            <th>actions</th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                 <button class="btn btn-primary btn-square"> <a href="{{ path('app_task_new') }}">Create new</a></button >
                                </div>
                            </div>
                            <div id="styleSelector">
                            </div>
                        </div>
                    </div>
    
{% endblock %}
